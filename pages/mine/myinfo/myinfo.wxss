.shuru{
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  padding: 40rpx 20rpx 40rpx;
}
.shuru .xiangmu{
  width: 150rpx;
}
.shuru input{
  width: 550rpx;
  border: 1px solid red;
}







/** **/
.pubTitle{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  border: 1px solid red;
  align-items: center;
  margin-bottom: 40rpx;
}
.pubTitle .txt{
  font-size: 40rpx;
  height: 100%;
  position: relative;
  padding-left: 30rpx;
}
.pubTitle .txt::before{
  display: block;
  width: 10rpx;
  height: 30rpx;
  background-color: red;
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -15rpx;
}
/**  **/
.dynamic{
  padding: 90rpx 0 70rpx;
}
.dyItem{
  display: flex;
  padding: 15rpx 0;
  border: 1rpx dotted #f4f4f4;
  justify-content: space-between;
}
.dyItem .pic{
  width: 230rpx;
  height: 150rpx;
}
.dyItem .pic image{
  width: 100%;
  height: 100%;
}
.dyItem .txt{
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.dyItem .title{
  font-size: 34rpx;
}
.dyItem .info{
  font-size: 26rpx;
  color: #888; 
  display: flex;
  flex-direction: column;
}


