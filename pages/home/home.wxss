/* pages/home/home.wxss */
.hdCon{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}
.hdCon navigator{
  height: 50rpx;
}
.hdCon image{
  height: 100%;
}

.banner{
  width: 100%;
  height: 300rpx;
  border: 1px solid red;
}
.banner swipper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 100%;
}



.pubTitle{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  border: 1px solid red;
  align-items: center;
  margin-bottom: 40rpx;
}
.pubTitle .txt{
  font-size: 40rpx;
  height: 100%;
  position: relative;
  padding-left: 30rpx;
}
.pubTitle .txt::before{
  display: block;
  width: 10rpx;
  height: 30rpx;
  background-color: red;
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -15rpx;
}
.pubTitle .detail{
  height: 100%;
  font-size: 34rpx;
  color: #666;
  padding-right: 30rpx;
}


.intro{
  background-color: #f0f3f8;
  padding: 90rpx 0 70rpx;
}

.introMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.introMain .box{
  width: 344rpx;
  height: 215rpx;
  margin-bottom: 10rpx;
}
.introMain .pic{
  height: 100%;
  width: 100%;
}
.introMain .ceng{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.1);
  position: relative;
  top: 0;
  left: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.introMain .ceng .tit{
  font-size: 34rpx;
}
.introMain .ceng .line{
  width: 50rpx;
  height: 2rpx;
  background-color: #fff ;
  margin: 10rpx 0 20rpx;
}
.introMain .ceng .des{
  opacity: 0.6;
  text-transform: uppercase;
  font-size: 26rpx;
  letter-spacing: 5rpx;
}