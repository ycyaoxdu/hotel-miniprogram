/* pages/home/position/position.wxss */

.banner{
  width: 100%;
  height: 300rpx;
  border: 1px solid red;
}
.banner swipper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 100%;
}


/**  **/
.pubTitle{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  border: 1px solid red;
  align-items: center;
  margin-bottom: 40rpx;
}
.pubTitle .txt{
  font-size: 40rpx;
  height: 100%;
  position: relative;
  padding-left: 30rpx;
}
.pubTitle .txt::before{
  display: block;
  width: 10rpx;
  height: 30rpx;
  background-color: red;
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -15rpx;
}
.pubTitle .detail{
  height: 100%;
  font-size: 34rpx;
  color: #666;
  padding-right: 30rpx;
}

/** 介绍 **/
.intro{
  background-color: #f0f3f8;
  padding: 90rpx 0 70rpx;
}

.introMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.introMain .box{
  width: 344rpx;
  height: 214rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.introMain .pic{
  height: 100%;
  width: 100%;
}
.introMain .ceng{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.1);
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
}
.introMain .ceng .tit{
  font-size: 34rpx;
}
.introMain .ceng .line{
  width: 50rpx;
  height: 2rpx;
  background-color: #fff ;
  margin: 10rpx 0 20rpx;
}
.introMain .ceng .des{
  opacity: 0.6;
  text-transform: uppercase;
  font-size: 26rpx;
  letter-spacing: 5rpx;
}


/** 公告 **/
.dynamic{
  padding: 90rpx 0 70rpx;
}
.dyItem{
  display: flex;
  padding: 15rpx 0;
  border: 1rpx dotted #f4f4f4;
  justify-content: space-between;
}
.dyItem .pic{
  width: 230rpx;
  height: 150rpx;
}
.dyItem .pic image{
  width: 100%;
  height: 100%;
}
.dyItem .txt{
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.dyItem .title{
  font-size: 34rpx;
}
.dyItem .info{
  font-size: 26rpx;
  color: #888; 
}




