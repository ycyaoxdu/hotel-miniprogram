<!--pages/book/book.wxml-->
<view class="header">
  <view class="container hdCon">
    <navigator open-type="switchTab" url="/pages/home/home" class="logo">
      <image mode="heightFix" src="/images/icons/xdu.png"></image>
    </navigator>

  </view>
</view>

 <!--    -->

 <view class="dynamic">
    <view class="container">
      <view class="pubTitle">
        <view class="txt">
          房型一览
        </view>
      </view>

      <view class="dyMain">
        <navigator class="dyItem" url="./standard/standard">
          <view class="pic">
            <image src="/images/pics/standard.jpg"></image>
          </view>
          <view class="txt">
            <view class="title">
              <view class="name"> 豪华单人间 </view>
              <view class="price">{{hotelInfo.singleRoomPrice}}元/天</view>
            </view>
            <view class="info">
              {{hotelInfo.singleRoomInfo}}
            </view>

          </view>
        </navigator>
      </view>

      <view class="dyMain">
        <navigator class="dyItem" url="./double/double">
          <view class="pic">
            <image src="/images/pics/double.jpg"></image>
          </view>
          <view class="txt">
            <view class="title">
              <view class="name"> 豪华双人间 </view>
              <view class="price">{{hotelInfo.doubleRoomPrice}}元/天</view>
              
            </view>
            <view class="info">
              {{hotelInfo.doubleRoomInfo}}
            </view>

          </view>
        </navigator>
      </view>



    </view>
  </view>




<view class="footer">
    <image class="pic" mode="widthFix" src="/images/icons/xdu.png"></image>
    <view class="text">- 享你所想 -</view>
  </view>
